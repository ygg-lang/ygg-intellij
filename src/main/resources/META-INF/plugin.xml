<idea-plugin>
    <id>com.github.ygg_lang.ygg_intellij</id>
    <name>Yggdrasil Support</name>
    <vendor>Yggdrasil</vendor>

    <description><![CDATA[
Intellij plugin for [VOML](https://github.com/voml), support all IDEs.

## Features
- Syntax Highlight
- Braces Matcher
    ]]></description>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
<!--    <depends optional="true" config-file="plugin-with-rust.xml">org.rust.lang</depends>-->
    <resource-bundle>messages.YggBundle</resource-bundle>
    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="YGG"
                implementationClass="com.github.ygg_lang.ygg_intellij.language.YggFileType"
                fieldName="INSTANCE"
                language="YGG"
                extensions="voml"
        />
        <lang.parserDefinition
                language="YGG"
                implementationClass="com.github.ygg_lang.ygg_intellij.language.YggParserDefinition"
        />
        <lang.syntaxHighlighter
                language="YGG"
                implementationClass="com.github.ygg_lang.ygg_intellij.ide.YggSyntaxHighlighter"
        />
        <colorSettingsPage
                implementation="com.github.ygg_lang.ygg_intellij.ide.colors.VomlColorSettingsPage"
        />
        <lang.commenter
                language="YGG"
                implementationClass="com.github.ygg_lang.ygg_intellij.ide.VomlCommenter"
        />
        <lang.braceMatcher
                language="YGG"
                implementationClass="com.github.ygg_lang.ygg_intellij.ide.braces.VomlBraceMatcher"
        />
        <lang.quoteHandler
                language="YGG"
                implementationClass="com.github.ygg_lang.ygg_intellij.ide.YggQuoteHandler"
        />
        <lang.foldingBuilder
                language="YGG"
                implementationClass="com.github.ygg_lang.ygg_intellij.ide.folding.YggFoldingBuilder"
        />
        <indexPatternBuilder
                implementation="com.github.ygg_lang.ygg_intellij.ide.todo.VomlTodoIndexPatternBuilder"
        />
        <todoIndexer
                filetype="YGG"
                implementationClass="com.github.ygg_lang.ygg_intellij.ide.todo.VomlTodoIndexer"
        />
        <completion.contributor
                language="YGG"
                implementationClass="com.github.ygg_lang.ygg_intellij.ide.completion.VomlOptionCompletionContributor"
        />
        <annotator
                language="YGG"
                implementationClass="com.github.ygg_lang.ygg_intellij.ide.annotator.VomlHighlightingAnnotator"
        />
        <annotator
                language="YGG"
                implementationClass="com.github.ygg_lang.ygg_intellij.ide.annotator.checkers.YggScopeCheckerAnnotator"
        />
        <annotator
                language="YGG"
                implementationClass="com.github.ygg_lang.ygg_intellij.ide.annotator.checkers.YggTableCheckerAnnotator"
        />
        <additionalTextAttributes scheme="Default" file="colors/VomlDefault.xml"/>
        <additionalTextAttributes scheme="Darcula" file="colors/VomlDarcula.xml"/>
        <langCodeStyleSettingsProvider
                implementation="com.github.ygg_lang.ygg_intellij.ide.codeStyle.VomlLanguageCodeStyleSettingsProvider"
        />
        <lang.formatter
                language="YGG"
                implementationClass="com.github.ygg_lang.ygg_intellij.ide.formatter.VomlFormattingModelBuilder"
        />
        <lang.smartEnterProcessor
                language="YGG"
                implementationClass="com.github.ygg_lang.ygg_intellij.ide.assist.fixers.VomlSmartEnterProcessor"
        />
    </extensions>
    <actions>
        <action id="com.github.ygg_lang.ygg_intellij.ide.actions.VomlCreateFile"
                class="com.github.ygg_lang.ygg_intellij.ide.actions.VomlCreateFile"
                text="Voml File"
                description="Create new Voml file">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewFile"/>
        </action>
    </actions>
</idea-plugin>
